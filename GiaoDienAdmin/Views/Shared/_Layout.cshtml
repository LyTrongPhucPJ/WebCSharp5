    <style>
        /* Phần chứa tên người dùng */
        .user-container {
            position: relative;
            display: inline-block;
            cursor: pointer;
            padding: 10px;
        }

            /* Ẩn menu ban đầu */
            .user-container .dropdown-menu {
                display: none;
                position: absolute;
                top: 100%;
                left: 0;
                background: white;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
                border-radius: 5px;
                padding: 10px;
                min-width: 150px;
                z-index: 1000;
            }

                /* Thiết kế item trong dropdown */
                .user-container .dropdown-menu a {
                    display: block;
                    text-decoration: none;
                    color: black;
                    padding: 8px 12px;
                    transition: background 0.3s;
                }

                    .user-container .dropdown-menu a:hover {
                        background: #f0f0f0;
                    }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 9999; /* Đảm bảo navbar luôn ở trên cùng */
