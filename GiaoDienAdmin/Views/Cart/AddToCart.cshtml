@model GiaoDienAdmin.ViewModels.CartItemViewModel

<!-- Slider -->
<hr class="shadow-hr" />
<!-- Phần Card -->
<div class="container mt-4">
    <p><span>Trang chủ/</span><span class="text-success">Thanh toán</span></p>
    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" id="delivery-tab" data-bs-toggle="tab" href="#delivery">Giao hàng</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pickup-tab" data-bs-toggle="tab" href="#pickup">Đến lấy</a>
        </li>
    </ul>
    <!-- Tab Giao hàng -->
    <div class="tab-content mt-3">
        <div class="tab-pane fade show active" id="delivery">
            <div class="row">
                <!-- Left Column -->
                <div class="col-lg-6">
                    <div class="card mb-5">
                        <div class="card-header bg-light text-white">
                            <div class="d-flex align-items-center justify-content-between mt-3">
                                <div class="info">
                                    <img src="~/img/Ảnh sản phẩm (1).png" alt="" style="height: 50px; width: 50px; border-radius: 50%" />
                                    <span class="text-success">CAFFEE LION XIN CHÀO QUÝ KHÁCH</span>
                                </div>
                                <div class="icon" style="padding-left: 20px; color: green">
                                    <i class="fa-solid fa-chevron-right"></i>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex align-items-center justify-content-between mx-3 mt-3">
                            <div class="info">
                                <p><strong class="text-success"><i class="fa-solid fa-location-dot mx-1"></i>Địa chỉ</strong></p>
                                <p>78/4A Đ. Phùng Văn Cung, Phường 7, Phú Nhuận, Hồ Chí Minh, Vietnam</p>
                            </div>

                            <div class="icon" style="padding-left: 20px; color: green">
                                <i class="fa-solid fa-chevron-right"></i>
                            </div>
                        </div>
                        <!-- Thông tin bên khách hàng -->
                        <div class="mt-3 mb-5">
                            <div class="d-flex align-items-center justify-content-between mx-3 mt-3">
                                <div class="info">
                                    <p><strong class="text-success">Nguyễn Duy Hạo</strong></p>
                                    <p>Số điện thoại: 0394805706</p>
                                </div>
                                <div class="icon" style="padding-left: 20px; color: green">
                                    <i class="fa-solid fa-chevron-right"></i>
                                </div>
                            </div>

                            <div class="d-flex align-items-center justify-content-between mx-3 mt-3">
                                <div class="info">
                                    <p><strong class="text-success">Thời gian nhận hàng</strong></p>
                                    <p>Chọn thời gian giao hàng</p>
                                </div>
                                <div class="icon" style="padding-left: 20px; color: green">
                                    <i class="fa-solid fa-chevron-right"></i>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mx-3 mt-3">
                                <div class="info">
                                    <p><strong class="text-success">Ghi chú cho cửa hàng</strong></p>
                                    <p>Ghi chú:</p>
                                </div>
                                <div class="icon" style="padding-left: 20px; color: green">
                                    <i class="fa-solid fa-chevron-right"></i>
                                </div>
                            </div>

                            <div class="form-check mt-2 mx-3">
                                <input class="form-check-input" type="checkbox" id="invoiceRequest" />
                                <label class="form-check-label" for="invoiceRequest">Yêu cầu xuất hóa đơn</label>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model != null && Model.CartItems != null && Model.CartItems.Count > 0)
                {
                    @foreach (var item in Model.CartItems)
                    {
                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <div class="info mt-3">
                                        <img src="@item.Image" alt="Product" class="img-thumbnail me-3" style="height: 100px; width: 100px" />
                                        <span>
                                            <strong class="text-success">@item.ProductName (L)</strong>
                                        </span>
                                    </div>
                                    <div style="margin-bottom: 24px"></div>
                                </div>
                                <div class="card-body">
                                    <ul class="list-group">
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-start">
                                                <img src="@item.Image" alt="Product" class="img-thumbnail me-3" style="height: 100px; width: 100px" />
                                                <div>
                                                    <strong class="text-success">@item.ProductName (L)</strong>
                                                    <p class="mb-0 text-muted mb-3">Size: L, Ngọt: Bình thường</p>
                                                    <p class="text-success">@item.Price</p>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-column align-items-end">
                                                <div class="d-flex flex-column text-center gap-2 mb-2">
                                                    <i class="fa-solid fa-pencil mb-1" style="cursor: pointer; color: rgb(64, 147, 109); font-size: 1.2rem;"></i>
                                                    <i class="fa-regular fa-trash-can mb-1" style="cursor: pointer; color: rgb(183, 28, 28); font-size: 1.2rem;"></i>
                                                </div>

                                                <div class="d-flex align-items-center">
                                                    <button class="btn btn-sm btn-outline-secondary bg-success text-light" style="font-size: 0.9rem; padding: 0.3rem 0.6rem">-</button>
                                                    <span class="mx-2" style="font-size: 1rem">6</span>
                                                    <button class="btn btn-sm btn-outline-secondary bg-success text-light" style="font-size: 0.9rem; padding: 0.3rem 0.6rem">+</button>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                                <div class="mt-3 mx-4">
                                    <h5 class="text-success">Thông tin thanh toán</h5>
                                    <div class="d-flex align-items-center justify-content-between">
                                        <p><strong>Tổng tiền tạm tính:</strong></p>
                                        <p>475,000₫</p>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-between">
                                        <p><strong>Phí vận chuyển:</strong></p>
                                        <p>0₫</p>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-between">
                                        <p><strong>Mã giảm giá:</strong></p>
                                        <p>0₫</p>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-between">
                                        <p><strong>Tổng tiền (Đã có VAT):</strong></p>
                                        <p class="text-success">475,000₫</p>
                                    </div>

                                    <h5 class="text-success">Phương thức thanh toán</h5>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="paymentMethod" id="creditCard" checked />
                                        <label class="form-check-label" for="creditCard">Thẻ ngân hàng/Thẻ tín dụng/Ví điện tử</label>
                                    </div>

                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="paymentMethod" id="momo" />
                                        <label class="form-check-label" for="momo">Ví MoMo</label>
                                    </div>

                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="paymentMethod" id="zalopay" />
                                        <label class="form-check-label" for="zalopay">Ví ZaloPay</label>
                                    </div>

                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="paymentMethod" id="shopeepay" />
                                        <label class="form-check-label" for="shopeepay">Ví ShopeePay</label>
                                    </div>

                                    <div class="form-check mt-3">
                                        <input class="form-check-input" type="checkbox" id="termsAgreement" />
                                        <label class="form-check-label" for="termsAgreement">
                                            Tôi đã đọc, hiểu và đồng ý với tất cả các điều khoản, điều kiện và chính sách liên quan
                                        </label>
                                    </div>

                                    <a href="/Payment/Checkout" class="btn btn-danger btn-custom">ĐẶT HÀNG</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center text-muted">
                        <p>Giỏ hàng của bạn trống.</p>
                    </div>
                }
            </div>
        </div>
        <!-- Tab Đến lấy hàng -->
        <div class="tab-pane fade" id="pickup">
            <!-- Nội dung tab "Đến lấy" tương tự tab "Giao hàng" -->
            <!-- Bạn có thể sao chép phần này từ tab giao hàng để hiển thị đúng cách -->
        </div>
    </div>
</div>
