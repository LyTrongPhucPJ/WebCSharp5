<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav>
        <ol class="breadcrumb">
            <a href="https://localhost:7046/ProductCustomers/Index" style="    text-decoration: none;
">
            <li class="breadcrumb-item text-success">Trang chủ</li></a>
            <li class="breadcrumb-item active" aria-current="page">Sản phẩm</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Danh mục sản phẩm -->
        <div class="col-md-3">
            <div class="category-list p-3" style="border: 1px solid gray; border-radius: 5px; padding: 10px; background-color: #fff;">
                <h6 class="fw-bold text-success">
                    <a href="https://localhost:7046/ProductCustomers/Locsp1" class="text-success text-decoration-none">Tất cả</a>
                </h6>

                <p>Hộp quà tết "mùa hoa nở"</p>

                <!-- Danh mục "Thức uống" -->
                <h6 class="text-success">
                    <a href="https://localhost:7046/ProductCustomers/LocspTra" class="text-success text-decoration-none">Trà</a>
                </h6>
                <ul>
                    @foreach (var category in categories.Where(c => c.Name.Contains("Trà")))
                    {
                        @foreach (var product in Model.Where(p => p.CategoryId == category.Id))
                        {
                            <li><a href="@Url.Action("Details", "ProductCustomers", new { id = product.Id })" class="text-dark text-decoration-none">@product.Name</a></li>
                        }
                    }
                </ul>

                <!-- Danh mục "Bánh" -->
                <h6 class="text-success">
                    <a href="https://localhost:7046/ProductCustomers/LocspCaPhe" class="text-success text-decoration-none">Cà Phê</a>
                </h6>
                <ul>
                    @foreach (var category in categories.Where(c => c.Name.Contains("Cà Phê")))
                    {
                        @foreach (var product in Model.Where(p => p.CategoryId == category.Id))
                        {
                            <li><a href="@Url.Action("Details", "ProductCustomers", new { id = product.Id })" class="text-dark text-decoration-none">@product.Name</a></li>
                        }
                    }
                </ul>
            </div>
        </div>

        <!-- Sản phẩm -->
        <div class="col-md-9">
            @if (!string.IsNullOrEmpty(selectedCategory))
            {
                <h5 class="text-success">@selectedCategory</h5>
            }

            <!-- Hiển thị sản phẩm chỉ thuộc danh mục có chữ "Bánh" -->
            @foreach (var category in categories.Where(c => c.Name.Contains("Cà Phê")))
            {
                var productsInCategory = Model.Where(p => p.CategoryId == category.Id).ToList();
                if (productsInCategory.Any())
                {
                    <h5 class="text-success">@category.Name</h5>
                    <div class="row mb-2">
                        @foreach (var product in productsInCategory)
                        {
                            <div class="col-md-4 mb-4">
                                <div class="card product-card shadow-sm p-3 bg-light">
                                    <a href="@Url.Action("Details", "ProductCustomers", new { id = product.Id })" class="product-link">
                                        @if (!string.IsNullOrEmpty(product.Img))
                                        {
                                            // Fetching image from API
                                            var fullImageUrl = $"https://localhost:7195{product.Img}";
                                            <img src="@fullImageUrl" alt="@product.Name" class="img-fluid" style="object-fit: cover; height: 200px; width: 100%; border-radius: 5px;" />
                                        }
                                        else
                                        {
                                            // Default image if none exists
                                            <img src="/images/default-placeholder.png" alt="Ảnh mặc định" class="img-fluid" style="height: 200px; width: 100%; opacity: 0.5; border-radius: 5px;" />
                                        }

                                    </a>

                                    <div class="card-body">
                                        <h6 class="card-title text-success"> @((product.Name.Length > 14) ? product.Name.Substring(0, 13) + "..." : product.Name)</h6>
                                        <p class="fw-bold text-success">@product.Price.ToString("C3")</p>
                                        <button class="btn btn-buy w-100">
                                            <i class="fa-solid fa-cart-arrow-down mx-1"></i>Đặt mua
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>
