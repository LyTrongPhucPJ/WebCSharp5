<script>
        document.addEventListener("DOMContentLoaded", function () {
            // Hiển thị 4 sản phẩm đầu tiên mặc định
            document.querySelectorAll(".product-list").forEach(productList => {
                let products = productList.querySelectorAll(".product-item");
                let count = 0;
                products.forEach((product, index) => {
                    if (count < 4) {
                        product.style.display = "block"; // Hiển thị 4 sản phẩm đầu tiên
                        count++;
                    }
                });
            });

            // Xử lý sự kiện khi nhấn nút "Xem thêm"
            document.querySelectorAll(".btn-load-more").forEach(button => {
                button.addEventListener("click", function () {
                    let categoryId = this.getAttribute("data-category");
                    let productList = document.querySelector(`[data-category='${categoryId}']`);
                    let hiddenProducts = productList.querySelectorAll(".product-item[style='display: none;']");

                    let count = 0;
                    hiddenProducts.forEach(product => {
                        if (count < 4) { // Hiển thị thêm 4 sản phẩm mỗi lần bấm
                            product.style.display = "block";
                            count++;
                        }
                    });

                    // Nếu không còn sản phẩm ẩn, ẩn luôn nút "Xem thêm"
                    if (productList.querySelectorAll(".product-item[style='display: none;']").length === 0) {
                        this.style.display = "none"; // Ẩn nút nếu không còn sản phẩm để tải
                    }

                    // Cập nhật lại nội dung nút Xem thêm nếu số lượng sản phẩm còn lại nhỏ hơn 4
                    if (hiddenProducts.length <= 4) {
                        this.querySelector("span").textContent = "Xem thêm " + hiddenProducts.length + " sản phẩm";
                    }
                });
            });
        });

</script>
