<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giao diện điều hướng với Biểu tượng</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            height: 100%;
            overflow: hidden;
        }

        body {
            display: flex;
            font-family: Arial, sans-serif;
            height: 100vh;
        }

        .nav-container {
            width: 20%;
            background-color: #006F3C;
            color: white;
            padding: 20px;
            display: flex;
            flex-direction: column;
            box-shadow: 2px 0px 5px rgba(0, 0, 0, 0.1);
        }

        .logo img {
            width: 100px;
            height: 100px;
            margin-bottom: 20px;
        }

        .nav-links {
            display: flex;
            flex-direction: column;
            width: 100%;
        }

            .nav-links a {
                text-decoration: none;
                color: white;
                padding: 12px;
                margin: 5px 0;
                border-radius: 5px;
                align-items: center;
                justify-content: space-between;
                width: 100%;
                transition: background-color 0.3s ease;
            }

                .nav-links a:hover {
                    background-color: #005f00;
                }

        .info {
            display: flex;
            align-items: center;
            padding: 12px;
            margin: 5px 0;
        }

            .info img {
                width: 45px;
                height: 40px;
                border-radius: 50%;
                margin-right: 10px;
            }

        .dropdown-menu {
            display: flex;
            flex-direction: column;
            border-radius: 5px;
            margin-left: 20px;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out, padding 0.3s ease-out;
        }

            .dropdown-menu a {
                text-decoration: none;
                color: white;
                padding: 5px 5px;
                margin: 5px 0;
                border-radius: 5px;
            }

                .dropdown-menu a:hover {
                    background-color: #004d00;
                }

        .content {
            width: 80%;
            flex-grow: 1;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
        }

        .header-bar {
            display: flex;
            align-items: center;
            background-color: #000000;
            padding: 14px;
            justify-content: space-between;
        }

        .right-section {
        }


        .search-bar {
            display: flex;
            background-color: #666363;
            border-radius: 25px;
            padding: 0px 15px;
            margin-left: 60px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            width: 100%;
        }

            .search-bar input {
                flex-grow: 1;
                border: none;
                outline: none;
                padding: 10px;
                font-size: 16px;
                background-color: #666363;
                color: white;
            }

                .search-bar input::placeholder {
                    color: white;
                }

            .search-bar button {
                background: none;
                border: none;
                cursor: pointer;
                color: white;
                padding: 5px;
                font-size: 18px;
            }




        .user-info {
            display: flex;
            align-items: center;
            cursor: pointer;
            position: relative;
            color: white;
        }

            .user-info img {
                width: 45px;
                height: 40px;
                border-radius: 50%;
                margin-right: 10px;
            }

            .user-info i {
                margin-left: 5px;
                color: white;
            }

        .user-dropdown-menu {
            display: flex;
            flex-direction: column;
            margin-left: 10px;
            max-height: 0;
            height: 200px;
            overflow: hidden;
            transition: max-height 0.3s ease-out, padding 0.3s ease-out;
            position: absolute;
            top: 63px;
            right: 0;
            background-color: white;
            width: 233px;
            z-index: 10;
            border: 2px solid;
        }

            .user-dropdown-menu a {
                text-decoration: none;
                color: black;
                border-radius: 5px;
                text-align: center;
                margin-top: -7px;
            }

            .user-dropdown-menu:hover {
                background-color: #DDDDDD;
            }

        .hamburger-icon {
            display: none;
            cursor: pointer;
            font-size: 30px;
            color: white;
        }

        /* Khi menu có mũi tên */
        .nav-links a i {
            transition: transform 0.3s ease;
            margin: 5px;
        }

        .nav-links a.open i {
            transform: rotate(180deg);
        }

        .nav-links.mobile {
            display: none;
            flex-direction: column;
            width: 100%;
            background-color: #006F3C;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            padding-top: 80px;
        }

            .nav-links.mobile a {
                padding: 15px;
                text-align: center;
                width: 100%;
            }

            .nav-links.mobile.active {
                display: flex;
            }
    </style>
</head>

<body>

    <div class="nav-container">
        <div class="logo" style="text-align:center;">
            <img src="/Img/Anh_Lion.jpg" alt="Logo" style="width:140px; height:120px;">
        </div>
        <div class="nav-links">

            <div class="info">
                <img src="~/img/anhh2.jpg" />
                <span>Nguyễn Quốc Anh</span>
            </div>


            <a href="@Url.Action("Index", "ProductsAdmin", new { area = "Admin" })">Danh sách sản phẩm</a>

            <a href="@Url.Action("Index","ProductCategories")">Danh mục sản phẩm</a>

            <a href="@Url.Action("Index","Orders")"><i class="fas fa-shopping-cart"></i> Đơn hàng</a>
            <a href="@Url.Action("Index","Employees")"><i class="fas fa-users"></i> Nhân viên</a>
            <a href="@Url.Action("Index","Customers")"><i class="fas fa-user"></i> Khách hàng</a>
            <a href="@Url.Action("Index","Payments")"><i class="fas fa-credit-card"></i> Thanh toán</a>
        </div>
 
    </div>

    <div class="content">
        <div class="header-bar">
            <div class="left-section">
                <div class="search-bar">
                    <input type="text" placeholder="Tìm kiếm">
                    <button aria-label="Tìm kiếm">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

            </div>
            <div class="center-section">
            </div>
            <div class="right-section">
                <div class="user-info" onclick="toggleUserDropdown(event)">
                    <img src="~/img/anhh2.jpg" />
                    <span>Nguyễn Quốc Anh</span>
                    <i class="fas fa-chevron-down dropdown-arrow"></i>
                </div>
                <div class="user-dropdown-menu">
                    <a href="#">Đăng xuất</a>
                </div>
            </div>
        </div>
        <div class="body-section">
            @RenderBody()
            <!-- ProductsAdmin -->
            @RenderSection("CreateProductAdmin", required: false)
            @RenderSection("EditProductAdmin", required: false)
            @RenderSection("DeleteProductAdmin", required: false)
            @RenderSection("DetailProductAdmin", required: false)

            <!-- Order -->
            @RenderSection("CreateOrder", required: false)
            @RenderSection("EditOrder", required: false)
            @RenderSection("DeleteOrder", required: false)
            @RenderSection("DetailOrder", required: false)

            <!-- Employees -->
            @RenderSection("CreateEmployees", required: false)
            @RenderSection("EditEmployees", required: false)
            @RenderSection("DeleteEmployees", required: false)
            @RenderSection("DetailEmployees", required: false)

            <!-- Customer -->
            @RenderSection("CreateCustomer", required: false)
            @RenderSection("EditCustomer", required: false)
            @RenderSection("DeleteCustomer", required: false)
            @RenderSection("DetailCustomer", required: false)

            <!-- ProductCategories -->
            @RenderSection("CreateProductCategories", required: false)
            @RenderSection("EditProductCategories", required: false)
            @RenderSection("DeleteProductCategories", required: false)
            @RenderSection("DetailProductCategories", required: false)

            <!-- Payments -->
            @RenderSection("CreatePayments", required: false)
            @RenderSection("EditPayments", required: false)
            @RenderSection("DeletePayments", required: false)
            @RenderSection("DetailPayments", required: false)

        </div>
    </div>

    <script>
        function toggleDropdown(event) {
            event.preventDefault();
            const dropdown = event.target.closest('a').nextElementSibling;
            if (dropdown && dropdown.classList.contains('dropdown-menu')) {
                dropdown.style.maxHeight = dropdown.style.maxHeight ? null : dropdown.scrollHeight + 'px';
                dropdown.style.padding = dropdown.style.maxHeight ? '10px' : '0 10px';
            }
        }

        function toggleMenu() {
            const navLinks = document.querySelector('.nav-links');
            navLinks.classList.toggle('active');
        }

        function toggleUserDropdown(event) {
            event.preventDefault();
            const dropdown = event.target.closest('.user-info').nextElementSibling;
            dropdown.style.maxHeight = dropdown.style.maxHeight ? null : dropdown.scrollHeight + 'px';
            dropdown.style.padding = dropdown.style.maxHeight ? '20px' : '0 10px';
        }
    </script>

</body>

</html>
