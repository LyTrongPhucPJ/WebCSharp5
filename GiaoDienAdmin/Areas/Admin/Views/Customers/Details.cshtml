@model GiaoDienAdmin.Models.Customer

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div class="card mx-auto" style="max-width: 800px;">
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3">Tên khách hàng</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Điện thoại</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Ngày sinh</dt>
                <dd class="col-sm-9">@Model.DateOfBirth?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Địa chỉ</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">@(@Model.IsActive ? "Đang hoạt động" : "Chưa hoạt động")</dd>
            </dl>

            <!-- Nút Quay lại -->
            <div class="form-group text-center mt-3">
                <a href="@Url.Action("Index", "Customers", new { area = "Admin" })" class="btn btn-secondary btn-lg">Quay lại</a>
            </div>

        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    /* Cải thiện giao diện card */
    .card {
        max-width: 800px; /* Giới hạn chiều rộng của card */
        margin: 0 auto; /* Căn giữa card */
    }

    .form-group {
        margin-bottom: 1.5rem; /* Tạo khoảng cách giữa các phần tử */
    }

        .form-group .control-label {
            font-weight: bold; /* Làm đậm label */
        }

        .form-group .text-danger {
            font-size: 1.1rem;
        }
</style>

