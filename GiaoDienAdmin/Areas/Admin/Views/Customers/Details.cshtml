@model GiaoDienAdmin.Models.Customer

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-header">
            <h5>Thông tin chi tiết khách hàng</h5>
        </div>
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-2">Tên khách hàng</dt>
                <dd class="col-sm-10">@Model.FullName</dd>

                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Model.Email</dd>

                <dt class="col-sm-2">Điện thoại</dt>
                <dd class="col-sm-10">@Model.PhoneNumber</dd>

                <dt class="col-sm-2">Ngày sinh</dt>
                <dd class="col-sm-10">@Model.DateOfBirth?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-2">Địa chỉ</dt>
                <dd class="col-sm-10">@Model.Address</dd>

                <dt class="col-sm-2">Trạng thái</dt>
                <dd class="col-sm-10">@(@Model.IsActive ? "Đang hoạt động" : "Chưa hoạt động")</dd>
            </dl>

            <!-- Nút Quay lại -->
            <div class="form-group mt-3">
                <a href="@Url.Action("Index", "Customers", new { area = "Admin" })" class="btn btn-secondary">Quay lại</a>
            </div>

        </div>
    </div>
</div>
