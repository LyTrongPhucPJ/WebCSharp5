@model IEnumerable<GiaoDienAdmin.Models.Customer>

@{
    ViewData["Title"] = "Danh sách khách hàng";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">

    <div class="text-center mb-3">
        <a href="@Url.Action("Create", "Customers", new { area = "Admin" })" class="btn btn-success btn-lg">Thêm khách hàng</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Danh sách khách hàng</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Tên khách hàng</th>
                            <th>Email</th>
                            <th>Điện thoại</th>
                            <th>Ngày sinh</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>@customer.Id</td>
                                <td>@customer.FullName</td>
                                <td>@customer.Email</td>
                                <td>@customer.PhoneNumber</td>
                                <td>@customer.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                                <td>@(customer.IsActive ? "Đang hoạt động" : "Chưa hoạt động")</td>
                                <td>
                                    <a href="@Url.Action("Details", "Customers", new { id = customer.Id, area = "Admin" })" class="btn btn-info btn-sm">Xem</a>
                                    <a href="@Url.Action("Edit", "Customers", new { id = customer.Id, area = "Admin" })" class="btn btn-warning btn-sm">Sửa</a>
                                    <a href="@Url.Action("Delete", "Customers", new { id = customer.Id, area = "Admin" })" class="btn btn-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
