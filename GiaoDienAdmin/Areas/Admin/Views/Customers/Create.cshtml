@model GiaoDienAdmin.Models.Customer

@{
    ViewData["Title"] = "Tạo khách hàng";
}

<div class="container mt-3">
    <h4 class="text-center">Thông tin khách hàng</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border p-4 rounded shadow-sm" style="max-height: 700px; overflow-y: auto;">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Tên khách hàng -->
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label">Tên khách hàng</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Số điện thoại -->
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <!-- Mật khẩu -->
                    <div class="form-group">
                        <label asp-for="PassWord" class="control-label">Mật khẩu</label>
                        <input asp-for="PassWord" class="form-control" type="password" />
                        <span asp-validation-for="PassWord" class="text-danger"></span>
                    </div>

                    <!-- Địa chỉ -->
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Địa chỉ</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <!-- Ngày sinh -->
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label">Ngày sinh</label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <!-- Trạng thái hoạt động -->
                    <div class="form-group form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label class="form-check-label" for="IsActive">Khách hàng đang hoạt động</label>
                    </div>

                    <!-- Nút tạo khách hàng -->
                    <div class="form-group text-center">
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        <input type="submit" value="Tạo khách hàng" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: 1px solid #ddd;
        border-radius: 10px;
    }

    .form-group {
        margin-bottom: 1rem; /* giảm khoảng cách giữa các trường */
    }

        .form-group .control-label {
            font-weight: bold;
        }

        .form-group .text-danger {
            font-size: 1rem;
        }

    .btn-lg {
        padding: 0.75rem 1.25rem;
    }

    .container {
        max-width: 100%;
        padding-left: 15px;
        padding-right: 15px;
    }

    .row {
        margin: 0 auto;
    }

    .btn-primary {
        width: 100%;
    }

    /* Tính năng cuộn khi nội dung dài */
    .card {
        max-height: 700px; /* Giới hạn chiều cao */
        overflow-y: auto; /* Cho phép cuộn dọc */
    }

    /* Điều chỉnh kích thước của form */
    .col-md-6 {
        max-width: 550px; /* Giới hạn chiều rộng của form */
    }

    .btn-primary, .btn-secondary {
        width: 45%;
        margin: 10px;
    }
</style>
