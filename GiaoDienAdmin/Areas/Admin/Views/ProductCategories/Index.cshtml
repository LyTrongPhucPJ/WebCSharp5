                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-truncate" style="max-width: 150px;">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="text-truncate" style="max-width: 200px;">@Html.DisplayFor(modelItem => item.Description)</td>
                        <td class="d-flex justify-content-center align-items-center gap-2">
                            <div>
                                <a href="@Url.Action("Edit", "ProductCategories", new { id = item.Id })" class="btn btn-warning btn-sm w-100">Sửa</a>
                            </div>
                            <div>
                                <a href="@Url.Action("Details", "ProductCategories", new { id = item.Id })" class="btn btn-info btn-sm w-100">Chi tiết</a>
                            </div>
