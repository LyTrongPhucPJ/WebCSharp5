@model GiaoDienAdmin.Models.Employee

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="border p-4 rounded shadow-sm">
                @if (!string.IsNullOrEmpty(Model.FullName))
                {
                    var fullName = $"{Model.FullName}";
                    <h3 class="text-center text-danger">Bạn có chắc chắn muốn xóa nhân viên @fullName không?</h3>
                }
                <hr />
                <form asp-action="Delete" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- ID nhân viên -->
                    <input type="hidden" asp-for="Id" />

                    <!-- Tên nhân viên -->
                    <div class="form-group row mb-3">
                        <label class="col-sm-4 col-form-label font-weight-bold">Tên nhân viên</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.FullName</p>
                        </div>
                    </div>

                    <!-- Số điện thoại -->
                    <div class="form-group row mb-3">
                        <label class="col-sm-4 col-form-label font-weight-bold">Số điện thoại</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.PhoneNumber</p>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="form-group row mb-3">
                        <label class="col-sm-4 col-form-label font-weight-bold">Email</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>
                    </div>

                    <!-- Địa chỉ -->
                    <div class="form-group row mb-3">
                        <label class="col-sm-4 col-form-label font-weight-bold">Địa chỉ</label>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Model.Address</p>
                        </div>
                    </div>

                    <!-- Nút Quay lại và Xóa -->
                    <div class="form-group text-center my-3">
                        <a asp-action="Index" class="btn btn-secondary btn-lg mx-2">Quay lại</a>
                        <input type="submit" value="Xóa" class="btn btn-danger btn-lg mx-2" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .container {
        max-width: 100%;
        padding-left: 15px;
        padding-right: 15px;
    }

    /* Căn giữa card */
    .card {
        max-width: 600px;
        margin: 0 auto;
    }

    /* Cải thiện các trường thông tin */
    .form-group .font-weight-bold {
        font-weight: bold;
    }

    .form-control-plaintext {
        font-size: 1.1rem;
        margin-top: 3px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .btn-lg {
        padding: 0.75rem 1.25rem;
    }

    /* Căn giữa nút và cải thiện khoảng cách */
    .btn {
        margin: 0.5rem;
    }

    /* Đảm bảo không gian giữa các phần tử */
    .form-group {
        margin-bottom: 1rem;
    }

    .text-center {
        text-align: center;
    }

    .form-group .text-danger {
        font-size: 1.2rem;
    }
</style>
