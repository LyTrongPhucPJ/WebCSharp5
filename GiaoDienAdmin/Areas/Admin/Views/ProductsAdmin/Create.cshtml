                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Img" class="control-label">Chọn ảnh sản phẩm</label>
                                <input asp-for="Img" name="img" type="file" class="form-control" />
                                <span asp-validation-for="Img" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CategoryId" class="control-label">Danh mục</label>
                                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                                    <option value="">-- Chọn danh mục --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="EmployeeId" class="control-label">Nhân viên</label>
                                <select asp-for="EmployeeId" asp-items="ViewBag.Employee" class="form-control">
                                    <option value="">-- Chọn nhân viên --</option>
                                </select>
                                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="IsActive" class="control-label">Trạng thái</label>
                                <select asp-for="IsActive" class="form-control">
                                    <option value="true">Hoạt động</option>
                                    <option value="false">Không hoạt động</option>
                                </select>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Mô tả sản phẩm</label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group text-center my-2">
                                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>

                                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    /* Thêm thanh cuộn cho toàn bộ bảng */
    .table-responsive {
        max-height: 600px; /* Giới hạn chiều cao của bảng */

        overflow-y: auto; /* Cho phép cuộn dọc khi dữ liệu vượt quá chiều cao */
        overflow-x: auto; /* Cho phép cuộn ngang khi bảng rộng */
    }



</style>


<script>

    function isNumber(event) {
        var charCode = event.which ? event.which : event.keyCode;

        // Chỉ cho phép các phím số từ 0 đến 9, phím Backspace và phím Delete
        if (charCode >= 48 && charCode <= 57 || charCode === 8 || charCode === 46) {
            return true;
        } else {
            return false;  // Ngăn không cho nhập ký tự không phải số
        }
    }


    document.getElementById('Price').addEventListener('input', function (e) {
        // Loại bỏ dấu $ và tất cả ký tự không phải số
        var value = e.target.value.replace(/[^\d]/g, ''); // Loại bỏ tất cả ký tự không phải số

        // Thêm dấu phân cách nghìn bằng dấu chấm sau mỗi ba chữ số
        input.value = value.replace(/\B(?=(\d{3})+(?!\d))/g, '.');
    });


</script>


<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
