}

@section DeleteProductAdmin {
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card p-4 rounded shadow-sm">
                    @if (!string.IsNullOrEmpty(Model.Name))
                    {
                        var fullName = $"{Model.Name}";
                        <h3 class="text-center text-danger">Bạn có chắc chắn muốn xóa sản phẩm @fullName không?</h3>
                    }
                    <hr />
                    <form asp-action="Delete" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- ID sản phẩm -->
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex mb-4">
                            <!-- Hình ảnh sản phẩm -->
                            <div class="m-3" style="width: 20%; text-align: center;">
                                <h4>Hình ảnh</h4>
                                @if (!string.IsNullOrEmpty(Model.Img))
                                {
                                    var fullImageUrl = $"https://localhost:7195{Model.Img}";
                                    <img src="@fullImageUrl"
                                         alt="@Model.Name" class="img-fluid rounded" style="max-width: 150px;">
                                }
                            </div>

                            <!-- Mô tả sản phẩm -->
                            <div class="m-3" style="width: 80%; word-wrap: break-word;">
                                <h4>Mô tả: </h4>
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <p>@Model.Description</p>
                                }
                            </div>
                        </div>

                        <!-- Nút Quay lại và Xóa -->
                        <div class="form-group text-center my-2">
                            <a asp-action="Index" class="btn btn-secondary btn-lg mx-2">Quay lại</a>
                            <input type="submit" value="Xóa" class="btn btn-danger btn-lg mx-2" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

